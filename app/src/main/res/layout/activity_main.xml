<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17202a "
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/kalkulasi"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:text="22 / 7"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:text="3.14"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kalkulasi" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAC"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#e67e22"
        android:text="AC"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hasil"
        android:layout_marginLeft="5dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDel"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#e67e22"
        android:textColor="@color/white"
        android:text="BACKSPACE"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btnAC"
        app:layout_constraintTop_toTopOf="@id/btnAC"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#2e4053"
        android:textColor="@color/white"
        android:text="7"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAC"
        android:layout_marginLeft="5dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#2e4053"
        android:textColor="@color/white"
        android:text="8"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@id/btn7"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="9"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/btn8"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBagi"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#e67e22"
        android:text="/"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        app:layout_constraintTop_toTopOf="@id/btn9"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="4"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="5"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@id/btn4"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="6"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/btn5"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnKali"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#e67e22"
        android:text="X"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        app:layout_constraintTop_toTopOf="@id/btn6"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="1"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="2"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/btn1"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="3"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/btn2"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnKurang"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#e67e22"
        android:text="-"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintTop_toTopOf="@id/btn3"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnKoma"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="."
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btnKoma"
        app:layout_constraintTop_toTopOf="@id/btnKoma"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSamaDengan"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#2e4053"
        android:text="="
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toTopOf="@id/btn0"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTambah"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#e67e22"
        android:text="+"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/btnSamaDengan"
        app:layout_constraintTop_toTopOf="@id/btnSamaDengan"
        />



</androidx.constraintlayout.widget.ConstraintLayout>